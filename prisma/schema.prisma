generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Clientes {
  id        Int      @id @default(autoincrement())
  nome      String
  telefone  String?
  email     String?  @unique
  fazendas  Fazendas[]
}

model Fazendas {
  id          Int      @id @default(autoincrement())
  nome        String
  areaTotal   Float
  proprietario Clientes @relation(fields: [clienteId], references: [id])
  clienteId   Int
  talhoes     Talhoes[]
}

model Talhoes {
  id          Int      @id @default(autoincrement())
  nome        String
  areaTalhao  Float
  fazenda     Fazendas @relation(fields: [fazendaId], references: [id])
  fazendaId   Int
}

model Insumos {
  id               Int      @id @default(autoincrement())
  classe           String
  marcaComercial   String
  ingredienteAtivo String
}